# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /verifyCode                             Application.getVerifyCode
*       /index.xhtml                            Application.index
POST    /validate.xhtml                         Application.volidateLogin


GET     /manage/index.xhtml                     Manage.index
GET     /printRecords/html                      Manage.printRecords
*       /manage/printRecords/data                      Manage.getPrintRecords
*       /manage/agent/data                             Manage.getAgents
# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
